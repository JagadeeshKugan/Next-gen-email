<Register>:
    email: email
    password: password_in
    MDScreen:
        name: "register"
        md_bg_color: 0,22,22,1
        #NavBar:
        
        MDBoxLayout:
            orientation:"vertical"

            canvas:
                Color:
                    rgb: 11, 23, 22
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:

                source: 'email.jpg'
                allow_stretch:True
                size: self.texture_size    
                    
            MDLabel:
                text: "Register"
                halign: "center"
                font_style: "Display"
                role: "small"
                halign: "center"
                theme_text_color: "Custom"
                text_color: "red"
                padding: [0,0,0,90]
                
            MDStackLayout:
                orientation: "lr-tb"
                
            
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: .5
                    spacing: 5
                    size_hint_y: None
                    height: "100dp"
                    #md_bg_color:1,0,0,1
                    padding: [20,0,20,0]

                    MDTextField:
                        id: email
                        text:""
                        #text_color_normal: "green"
                        mode:"outlined"
                        normal_color: [0, 0, 0, 0.2]
                        active_color: [0, 2, 0, 0.2]
                        icon_type: "left"
                        theme_text_color: "Custom"
                        text_color_normal: "blue"
                        padding: [50, 50]
                        pos_hint: {"center_x": .5}
                        hint_text: "Email"
                        width: "2dp"
                        required: True
                        MDTextFieldLeadingIcon:
                            icon: "email"
                            theme_icon_color: "Custom"
                            icon_color_normal: "blue"
                        MDTextFieldHintText:
                            text: "Enter Your Email"


                    MDTextField:
                        mode:"outlined"
                        width: sp(10)
                        theme_text_color: "Custom"
                        id: password_in
                        password: True
                        normal_color: [0, 0, 0, 0.2]
                        active_color: [0, 0, 0, 0.2]
                        icon_type: "left"
                        icon_left: "lock"
                        spacing: 30
                        padding: [50, 50]
                        required: True
                        #size_hint: .5, None
                        text_color_normal: "blue"
                        pos_hint: {"center_x": .5}
                        hint_text: "Password"
                        MDTextFieldLeadingIcon:
                            icon: "security"
                            theme_icon_color: "Custom"
                            icon_color_normal: "blue"
                        MDTextFieldHintText:
                            text: "Enter Your Password"

                    MDTextField:
                        mode:"outlined"
                        width: sp(10)
                        theme_text_color: "Custom"
                        id: code_in
                        password: True
                        normal_color: [0, 0, 0, 0.2]
                        active_color: [0, 0, 0, 0.2]
                        icon_type: "left"
                        icon_left: "lock"
                        spacing: 30
                        padding: [50, 50]
                        required: True
                        #size_hint: .5, None
                        text_color_normal: "blue"
                        pos_hint: {"center_x": .5}
                        hint_text: "Password"
                        MDTextFieldLeadingIcon:
                            icon: "security"
                            theme_icon_color: "Custom"
                            icon_color_normal: "blue"
                        MDTextFieldHintText:
                            text: "Enter Your Code"


            MDBoxLayout: 
                orientation: "horizontal"
                size_hint_y: None
                height: "70dp"
               
                padding:5
                
                MDBoxLayout:
                    size_hint_x: None
                    width: "30dp"
                MDButton:
                    style: "elevated"
                    spacing: 30           
                    theme_shadow_color: "Custom"
                    shadow_color: "red"
                    
                    on_release: root.registeruser() 
                    size_hint: .3, None
                    pos_hint: {"right": 1,"center_y": .5}
                    MDButtonText:
                        text: "Register"
                        text_color: "red"
                MDBoxLayout:
                    size_hint_x: None
                    width: "70dp"
                MDButton:
                    style: "elevated"
                                
                    theme_shadow_color: "Custom"
                    shadow_color: "green"
                    on_release: app.root.current = "login" 
                    size_hint: .4, None
                    pos_hint: {"center_y": .5}
                    MDButtonText:
                        text: "Login"
                        text_color: "red"
                
                             
            MDBoxLayout:
                orientation:"vertical"
                size_hint_y: None
                height:"100dp"
                
                Button:
                    text: 'Touch to speak'
                    on_release: root.registeruser()
                    
            

