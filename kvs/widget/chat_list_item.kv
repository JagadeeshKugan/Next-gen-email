<ChatListItem>:
    #ripple_behavior: True
    md_bg_color: 1,1,1, 0.2
    elevation: 1
    size_hint_y: None
    padding: [10, 0, 10, 0]
    spacing: 10
    height: dp(35)
    on_press: app.create_chat(root.profile)
   
    
    MDBoxLayout:
        md_bg_color: 0,0,0, 0.2
        orientation: "horizontal"
        padding: [20, 0, 0, 10]
        spacing: dp(2)
        Label:
            id: chatUsername
            text: root.value
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: 20
            
            color: 1,1,1,0.9
            bold: True
            md_bg_color:0,0,0,0.4
        MDBoxLayout:
            orientation:"vertical"
            size_hint_x: None
            width: sp(15)
        Label:
            id: chatUsername
            text: root.friend_name
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: 20
            halign: "center"
            color: 1,1,1,0.9
            bold: True
        MDBoxLayout:
            orientation:"vertical"
            size_hint_x: None
            width: sp(15)
        Label:
            id: time
            text: root.timestamp
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: sp(9)
   
